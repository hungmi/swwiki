%p#notice= notice

%h1.inline= @list.name
%span
  = link_to 'Add post', new_list_post_path(list_id: @list.id)
  \|
  = link_to 'Delete', list_path(@list), :method => :delete, :data => { :confirm => 'Are you sure?' }
  \|
  = link_to 'Add sublist', edit_list_path(@list)
  %hr

- @list.posts.each do |po|
  %h3.inline= po.title
  %span.pull-right
    = link_to 'Edit', edit_list_post_path(@list, po)
    \|
    = link_to 'Delete', list_post_path(@list, po), :method => :delete, :data => { :confirm => 'Are you sure?' }
  %p= sanitize(po.content)
  %hr