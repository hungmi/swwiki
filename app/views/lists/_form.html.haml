= simple_form_for(@list) do |f|

  = f.error_notification

  .form-inputs
    = f.input :name, label: false
    .links
      = link_to_add_association 'add sublist', f, :sublists, 'data-association-insertion-node' => "#sublists", 'data-association-insertion-method' => "after"

    %h3 Sublists
    %ul#sublists{ style: 'list-style: none;' }
      = f.simple_fields_for :sublists do |sublist|
        %li= render partial:'sublist_fields', locals: { f: sublist }


  .form-actions
    = f.button :submit
